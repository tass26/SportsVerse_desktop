<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="750.0" style="-fx-background-color: #1e1e2d;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sportsverse.gui.SignInController">
    <children>
      <Button fx:id="button" layoutX="98.0" layoutY="331.0" mnemonicParsing="false" onAction="#connecter" prefHeight="45.0" prefWidth="139.0" text="se connecter" />
       
      <Button layoutX="380.0" layoutY="331.0" mnemonicParsing="false" onAction="#retour" prefHeight="45.0" prefWidth="128.0" text="Retour" fx:id="xbttn" />
      <Label fx:id="erreurLabel" layoutX="98.0" layoutY="298.0" prefHeight="17.0" prefWidth="419.0" styleClass="erreurLabel" textFill="#fc0808" />
      <Label id="title" fx:id="title" layoutX="206.0" layoutY="54.0" prefHeight="35.0" prefWidth="174.0" styleClass="title" text="Connectez vous " textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font></Label>
      <GridPane fx:id="loginForm" layoutX="98.0" layoutY="124.0" prefHeight="125.0" prefWidth="377.0" styleClass="form">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Email" textFill="#fffefe">
               <font>
                  <Font size="15.0" />
               </font></Label>
          
            <TextField GridPane.columnIndex="1" fx:id="xemail" />  
            <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="xpassword" />
            <Label text="Mot de passe" textFill="#f8f8f8" GridPane.rowIndex="2">
               <font>
                  <Font size="15.0" />
               </font></Label>
         </children>
      </GridPane>
   </children>
</AnchorPane>
